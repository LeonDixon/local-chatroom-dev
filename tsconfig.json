{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "outDir": "./dist",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "typeRoots": [
      "./node_modules/@types/"
    ],
    "types": [
      "webpack-env"
    ],
    "paths": {
      "*": [
        "node_modules/"
      ],
      "@/*": [
        "./*",
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "./**/*"
  ],
  "exclude": [
    "dist",
    "**/*.spec.ts",
    "node_modules"
  ]
}
